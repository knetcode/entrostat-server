{
  "name": "entrostat-server",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Kyle Esterhuizen",
    "email": "kyle@knetcode.com"
  },
  "description": "Entrostat - Server",
  "main": "src/index.ts",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "format": "prettier --write .",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "test": "SKIP_EMAIL=true vitest run",
    "test:watch": "SKIP_EMAIL=true vitest",
    "test:ui": "SKIP_EMAIL=true vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.0",
    "fastify": "^5.6.2",
    "pg": "^8.16.3",
    "resend": "^6.5.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.0.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/ui": "^4.0.15",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  }
}